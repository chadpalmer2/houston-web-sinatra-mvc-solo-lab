<h1> Edit <%= @puppy.name %> </h1>

<form action="/puppies/<%= @puppy.id %>" method="post">
    <input type="hidden" name="_method" value="patch"/>

    <label>Name</label>
    <input type="text" name="name" value="<%= @puppy.name %>">

    <label>Breed</label>
    <input type="text" name="breed" value="<%= @puppy.breed %>">

    <input type="submit" value="Edit Puppy">
</form>